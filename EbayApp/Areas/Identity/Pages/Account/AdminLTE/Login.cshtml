@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Ebay Portal | Log in</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>Dropship</b>Manger</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <form action="~/Identity/account/AdminLTE/Login" method="post">
        <div class="input-group mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email"/>
            <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
            </div>
            <div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
			
        </div>
        <div class="input-group mb-3">
          <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password"/>
		  <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>  
          <div>
              <span asp-validation-for="Input.Password" class="text-danger"></span>
          </div>
          
         
        </div>
        <div class="row mb-2">
          <div class="col-8 ">
            <div class="icheck-primary">
              <input class="form-check-input" asp-for="Input.RememberMe" />
              
             <label for="remember">
                Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

   @*   <div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
      </div>*@
      <!-- /.social-auth-links -->

      <p class="mb-1">
        @*<a href="forgot-password.html">I forgot my password</a>*@
        <a id="forgot-password" asp-page="../ForgotPassword">Forgot your password?</a>
      </p>
      <p class="mb-1">
        <a asp-page="../Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
          @*<a href="register.html" class="text-center">Register a new membership</a>*@
      </p>
      <p class ="mb-0">
          <a id="resend-confirmation" asp-page="../ResendEmailConfirmation">Resend email confirmation</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->

<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>

@section Scripts {
<partial name="./_ValidationScriptsPartial.cshtml" />
}
</body>
</html>
